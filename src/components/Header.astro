---
import MUNI from "../assets/logo.png";
import EDEN from "../assets/EDEN-logo.png";
import ECOPLAN from "../assets/ECOPLAN-logo.png";
import PD from "../assets/PD-logo.png";
---

<header
  class="bg-[#F8DC95CC] px-[0.75rem] overflow-hidden smMd:px-[1.5rem] lg:px-[2.6875rem] w-full fixed top-0 z-50 h-[80px] border-b-[1px] border-[#FFFFFFB2]"
>
  <div
    class="smMd:px-[1rem] smMd:py-0 lg:px-[1.375rem] h-full border-x-[1px] border-[#FFFFFFB2]"
  >
    <div
      class="w-full h-full flex items-center justify-around max-w-4xl mx-auto"
    >
      <a class="flex items-center gap-1" href="/">
        <img
          class="h-[30px] smMd:h-[1.875rem] lg:h-[2.5rem] object-contain"
          src={MUNI.src}
          alt="World Energy Council"
        />
        <h1
          class="hidden smMd:block font-bold text-[10px] smMd:text-[15px] lg:text-[20px] leading-[0.9] text-white"
        >
          Municipalidad <br />de Alberti
        </h1>
      </a>
      <a class="" href="/">
        <img
          class="h-auto smMd:h-[1.875rem] lg:h-[2.5rem] w-[60px] smMd:w-[80px] object-contain"
          src={EDEN.src}
          alt=""
        />
      </a>
      <a class="" href="/">
        <img
          class="h-auto smMd:h-[2.875rem] lg:h-[3.5rem] w-[60px] smMd:w-[80px] object-cover"
          src={ECOPLAN.src}
          alt=""
        />
      </a>
      <a
        class="h-auto smMd:h-[1.875rem] lg:h-[2.5rem] w-[25px] smMd:w-[1.875rem] lg:w-[2.5rem] rounded-full"
        href="/"
      >
        <img
          class="w-full h-full object-cover rounded-full"
          src={PD.src}
          alt=""
        />
      </a>
    </div>
  </div>
</header>
